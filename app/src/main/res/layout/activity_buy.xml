<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/dark_background"
    android:layout_height="match_parent">


    <ImageView
        android:src="@drawable/nheader"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="200dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/buy_title"
        style="@style/TextAppearance.AppCompat.Display2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vazir"
        android:text="خرید"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/service_code_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:hint="کد مشتری"
                android:nextFocusDown="@id/service_type"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/service_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="@string/number_digits"
                    android:fontFamily="@font/vazir"
                    android:inputType="number"
                    android:maxLength="6"
                    android:nextFocusDown="@id/service_type"
                    android:padding="16dp"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/service_name_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:hint="نام و نام خانوادگی"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/service_code_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/service_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/vazir"
                    android:inputType="text"
                    android:padding="16dp"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/service_name_title"
                app:layout_constraintLeft_toLeftOf="@+id/service_name_title"
                app:layout_constraintRight_toRightOf="@+id/service_name_title"
                app:layout_constraintTop_toTopOf="@+id/service_name_title" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/service_invite_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:hint="کد معرف"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/service_name_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/service_invite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/vazir"
                    android:inputType="text"
                    android:padding="16dp"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:visibility="gone"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/service_invite_title"
                app:layout_constraintLeft_toLeftOf="@+id/service_invite_title"
                app:layout_constraintRight_toRightOf="@+id/service_invite_title"
                app:layout_constraintTop_toTopOf="@+id/service_invite_title" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/service_type_title"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:hint="عنوان خرید"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/service_name_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/service_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/vazir"
                    android:inputType="text"
                    android:padding="16dp"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/service_reason_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:focusable="false"
                android:gravity="center"
                android:hint="نوع خرید"
                app:layout_constraintLeft_toRightOf="@+id/service_reason"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/service_invite_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/service_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:digits="@string/number_digits"
                    android:enabled="false"
                    android:fontFamily="@font/vazir"
                    android:inputType="number"
                    android:maxLength="3"
                    android:padding="16dp"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/service_reason_view"
                android:layout_width="0dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/service_reason_title"
                app:layout_constraintLeft_toLeftOf="@+id/service_reason_title"
                app:layout_constraintRight_toRightOf="@+id/service_reason_title"
                app:layout_constraintTop_toTopOf="@+id/service_reason_title" />


            <Spinner
                android:id="@+id/service_reason"
                android:layout_width="170dp"
                android:layout_height="0dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edit_shape"
                android:fontFamily="@font/vazir"
                android:padding="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/service_reason_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/service_reason_title"
                app:layout_constraintTop_toTopOf="@+id/service_reason_title"
                app:layout_constraintVertical_bias="0.0" />
            <ImageView
                app:layout_constraintLeft_toLeftOf="@+id/service_reason"
                app:layout_constraintTop_toTopOf="@+id/service_reason"
                app:layout_constraintBottom_toBottomOf="@+id/service_reason"
                android:src="@drawable/vector_down"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/service_price_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:hint="قیمت"
                app:layout_constraintLeft_toRightOf="@+id/service_price_title2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/service_reason_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/service_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="@string/number_digits"
                    android:fontFamily="@font/vazir"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:padding="16dp"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textview.MaterialTextView
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/service_price_title2"
                android:fontFamily="@font/vazir"
                android:text="تومان"
                app:layout_constraintTop_toTopOf="@+id/service_price_title"
                app:layout_constraintBottom_toBottomOf="@+id/service_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/service_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/vazir"
                android:text="ثبت و ادامه"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/service_price_title" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:id="@+id/service_loading"
        android:elevation="15dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:indeterminate="true"
            android:layout_width="70dp"
            android:layout_height="100dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:textColor="@android:color/white"
            style="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/vazir"
            android:text="لطفا منتظر بمانید"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>